---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="teaching-list">
  {% for group in site.data.teaching %}
    <h4 class="mt-5 mb-3 font-weight-bold">{{ group.role }}</h4>
    
    {% for course in group.courses %}
      <div class="card mt-3 p-3">
        <div class="row g-3">
          {% if course.image %}
            <div class="col-md-2 col-sm-3 col-4 d-flex align-items-center">
              <img src="{{ course.image }}" alt="{{ course.title }} thumbnail" style="max-width: 100%; height: auto; border-radius: 4px;">
            </div>
          {% endif %}
          <div class="col d-flex align-items-center">
            <div>
              <h5 class="mb-1">
                {% if course.url %}
                  <a href="{{ course.url }}">{{ course.title }}</a>
                {% else %}
                  {{ course.title }}
                {% endif %}
              </h5>
              <p class="text-muted mb-1">{{ course.code }} · {{ course.term }} · {{ course.school }}</p>
              {% if course.description %}
                <p class="mb-0">{{ course.description }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  {% endfor %}
</div>
